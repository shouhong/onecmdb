<?xml version="1.0" encoding="UTF-8"?>

<web-app id="org.onecmdb.web" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	
	<display-name>OneCMDB</display-name>
	<description>Lokomo rudimentary OneCMDB Web GUI</description>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>



	<!-- ====================== Log4j Configuration ======================== -->

	<listener>
	   <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>120</param-value>
	</context-param>
	
	

	<!-- ================= Spring Application Context ====================== -->

	<servlet>
		<servlet-name>onecmdb</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/onecmdb.xml		
			/WEB-INF/onecmdb-acegi.xml
			/WEB-INF/onecmdb-remote-servlet.xml
			/WEB-INF/onecmdb-servlet.xml
			classpath:org/codehaus/xfire/spring/xfire.xml
			/WEB-INF/onecmdb-xfire-webservice-servlet.xml
		</param-value>
	</context-param>

	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<servlet-mapping>
		<servlet-name>onecmdb</servlet-name>
		<url-pattern>*.mvc</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>onecmdb</servlet-name>
		<url-pattern>/icons/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>onecmdb</servlet-name>
		<url-pattern>/graphs/*</url-pattern>
	</servlet-mapping>
	
	
	
<!-- Servlet mapping -->
 	<servlet>
        <servlet-name>onecmdb-xfire-webservice</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>onecmdb-xfire-webservice</servlet-name>
        <url-pattern>/webservice/*</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>onecmdb-remote</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>onecmdb-remote</servlet-name>
		<url-pattern>/remote/*</url-pattern>
	</servlet-mapping>


